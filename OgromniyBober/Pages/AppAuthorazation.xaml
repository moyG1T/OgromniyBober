<Page x:Class="OgromniyBober.Pages.AppAuthorazation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OgromniyBober.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="630" d:DesignWidth="960"
      Title="AppAuthorazation">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center">Логин</TextBlock>
                <TextBox Name="LoginBox"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center">Пароль</TextBlock>
                <PasswordBox Name="PassWordBox"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" >
                <Button Name="LogInButton" Click="LogInButton_Click">Войти</Button>
                <Button Name="RegistButton" Click="RegistButton_Click">Регистрация</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
